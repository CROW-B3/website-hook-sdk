{
  "name": "@b3-crow/website-hook-sdk",
  "version": "0.0.23",
  "description": "A lightweight JavaScript/TypeScript SDK for capturing user interactions on web pages and sending them into the Crow-B3 analytics/data pipeline.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "bunx prettier src/ --write",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CROW-B3/website-hook-sdk.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "CROW By B3",
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@types/node": "^25.0.3",
    "commitlint": "^20.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "ky": "^1.14.2"
  }
}
