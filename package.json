{
  "name": "@b3-crow/npm-sdk-template",
  "version": "0.0.8",
  "description": "A ready-to-go TypeScript/JavaScript SDK package starter, with linting, testing, build & publish workflows included.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "bun run prettier src/ --write",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CROW-B3/npm-sdk-template.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "CROW By B3",
  "license": "MIT",
  "packageManager": "bun@1.1.0",
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint-react/eslint-plugin": "^2.3.7",
    "commitlint": "^20.1.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
